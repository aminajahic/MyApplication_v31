<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnPretrazi"
            android:text="Pretrazi"
            android:layout_alignBaseline="@+id/unosPretrage"
            android:layout_alignBottom="@+id/unosPretrage"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Pretraga"
            android:id="@+id/unosPretrage"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/btnPretrazi"
            android:layout_toStartOf="@+id/btnPretrazi" />


    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listaGradova"></ListView>

</LinearLayout>